@model Member
@{
    ViewData["Title"] = "Add a New Member";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

<div class="text-left">
    <form asp-controller="Members" asp-action="AddMember" method="post">
        <div class="form-group">   
            <label asp-for="FirstName"> First Name </label>
            <input asp-for="FirstName" class="form-control" /> <br />
        </div>  
        <div class="form-group">      
            <label asp-for="Email">Surname</label>
            <input asp-for="Surname" class="form-control" /> <br />
        </div>
        <div class="form-group">      
            <label asp-for="Email">Email Address</label>
            <input type="Email" asp-for="Email" class="form-control" /> <br />
        </div>   
        <div class="form-group">      
            <label asp-for="ContactNumber">Contact Number</label>
            <input type="tel" asp-for="ContactNumber" class="form-control" /> <br />
        </div> 
        <div class="text-center"> 
            <button type="submit">Save</button> 
        </div>         
    </form>
</div>