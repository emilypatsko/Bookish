@using Bookish.Models
@model MemberCatalogueViewModel
@{
    ViewData["Title"] = "Member Catalogue";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>
<div class="text-left">
    @if (Model.MemberCatalogue.Count > 0 ) 
    {
        <table class="table table-striped table-bordered">
            <tr> 
                <th>ID</th>
                <th>First Name</th>
                <th>Surname</th>
                <th>Email Address</th>
                <th>Contact Number</th>
                <th></th>
            </tr>
            @foreach (var member in Model.MemberCatalogue) 
            {
                <tr>
                    <td> @member.MemberId </td>
                    <td> @member.FirstName</td>
                    <td> @member.Surname</td>
                    <td> @member.Email </td>
                    <td> @member.ContactNumber </td>
                    <td> 
                        @Html.ActionLink("Edit", "Edit", new { id=member.MemberId }) |
                        @Html.ActionLink("Details", "Details", new { id=member.MemberId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=member.MemberId })
                    </td>
                </tr>                
            }  
        </table>
    }      
</div>