@model Book
@{
    ViewData["Title"] = "Add Copies of " + @Model.Title;
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="text-left">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <input type="hidden" asp-for="BookId" class="form-control" /> <br />
            </div>  
            <div class="form-group">      
                <label>How many copies would you like to add? </label>
                <input type="number" class="form-control" name="NumOfCopies"/> <br />
            </div>   
            <div class="text-center">
                <button type="submit">Submit</button>   
            </div>
        }
    </div>
    @Html.ActionLink("Back to Catalogue", "Index") 
</div>